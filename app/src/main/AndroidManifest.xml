<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AbsencesEssect"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Login Activity -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Role-Based Redirect Activity -->
        <activity
            android:name=".auth.RoleBasedRedirect"
            android:exported="false" />

        <!-- Admin Panel Activity -->
        <activity
            android:name=".admin.AdminPanelActivity"
            android:exported="false" />

        <!-- Agent Panel Activity -->
        <activity
            android:name=".agent.AgentPanelActivity"
            android:exported="false" />

        <!-- Teacher Panel Activity -->
        <activity
            android:name=".teacher.TeacherPanelActivity"
            android:exported="false" />

    </application>

</manifest>